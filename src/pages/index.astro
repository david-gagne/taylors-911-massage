---
import Layout from "../layouts/Layout.astro";
---

<Layout title="911 Massage">
  <main class="w-100 vh-100">
    <section
      id="content"
      class="w-100 h-100 flex justify-center items-center helvetica tc flex-column z-999"
    >
      <div class="b ttu white f3 self-start pl3 pt3 z-999">911 Massage</div>
      <div class="h-100 flex justify-center items-center">
        <div class="ph1 z-999">
          <!-- <p class="ttu white f7">Coming to Broward County in 2024</p> -->
          <div class="w-100 center">
            <div class="mw9">
              <svg viewBox="0 0">
                <path
                  id="curve"
                  fill="transparent"
                  d="M-35,200c4-6.1,65.5-96.8,178.6-95.6c111.3,1.2,170.8,90.3,175.1,97"
                ></path>
                <text class="helvetica ttu f7 b" fill="white">
                  <textPath xlink:href="#curve" startOffset="91"
                    >Coming to Broward County in 2024</textPath
                  >
                </text>
              </svg>
            </div>
          </div>

          <h1 class="white ttu f3 f1-ns lh-title mt0">
            Affordable massage therapy for first responders
          </h1>
          <p class="white lh-copy f5 f3-ns fw3 measure-narrow center">
            Hey, Taylor here! While my website is still under construction, <strong
              >let's connect!</strong
            >
          </p>

          <button class="br2 ba b--white b ttu mt4">Sign me up</button>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  h1 {
    max-width: 900px;
  }

  button {
    width: 140px;
    height: 40px;
    color: var(--brand-red);
  }

  #content {
    background-image: url("../images/teaser-bg-image.avif");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
  }

  #content::after,
  #content::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--brand-red);
    opacity: 0.3;
  }

  svg {
    max-width: 18em;
  }
</style>
